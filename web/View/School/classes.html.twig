{% extends './base.html.twig' %}

{% block title %}eDziennik AMN - klasy{% endblock %}




{% block content %}
     {% if info != 'brak' %}
        {% if info.col == 'red' %}               
            <div class="alert alert-danger" role="alert">
            {% else %}
                <div class="alert alert-success" role="alert">
                {% endif %}

                {{ info.inf }}
            </div>
        {% endif %}


            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Szkoła
                    <small>Control panel</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="{{ url('Home/index') }}"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li><a href="{{ url('School/index') }}"><i class="fa"></i>Szkoła</a></li>
                    <li class="active">Klasy</li>
                </ol>
            </section>

            <!-- Main content -->
            <section class="content">

                <!-- TO DO List -->
                <div class="box box-primary">
                    <div class="box-header">
                        <i class="ion ion-clipboard"></i>
                        <h3 class="box-title">Klasy</h3>
                    </div><!-- /.box-header -->

                    <div class="box-body">
                        <ul class="todo-list">
                            {% for c in classes %}
                                <li>
                                    <!-- drag handle -->
                                    <span class="handle">
                                        <i class="fa fa-ellipsis-v"></i>
                                        <i class="fa fa-ellipsis-v"></i>
                                    </span>
                                    <!-- checkbox -->
                                    <input type="checkbox" value="" name=""/>
                                    <!-- todo text -->
                                    <span class="text">{{ c.name }} rok {{ c.year.fromYear }}/{{ c.year.toYear }}</span>
                                    <!-- General tools such as edit or delete-->
                                    <div class="tools">
                                        <a href="{{ url('School/classes', {'action': 'del', 'id': c.id}) }}" class="fa fa-trash-o"></a>
                                    </div>
                                </li>
                            {% else %}
                                <li>
                                    <span class="text">Brak klas w bazie</span>
                                </li>
                            {% endfor %}
                        </ul>
                    </div><!-- /.box-body -->

                    <div class="box-footer clearfix no-border">
                        <a href="{{ url('School/classPrepare') }}" class="btn btn-default pull-right"><i class="fa fa-plus"></i> Dodaj nową</a>
                    </div>
                </div><!-- /.box -->


            </section><!-- /.Left col -->

        </div><!-- /.row (main row) -->

{% endblock %}