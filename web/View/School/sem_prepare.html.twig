{% extends './base.html.twig' %}

{% block title %}eDziennik AMN - klasy{% endblock %}
{% block head %}

    <link href="{{ url('template') }}/css/bootstrap-datetimepicker.min.css" rel="stylesheet" type="text/css"/>
{% endblock %}
{% block content %}
<div class="row" style="margin-top:60px;margin-bottom: 20px;">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Nowy rok szkolny</h3>
        </div>
        <div class="panel-body">
            <form name="inputform" method="POST" action="/admin/school/semesters/add">
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">Rok szkolny:</span>
                    
                    <select name="year" class="form-control" style="width:250px">
                        {% for y in years %}
                            <option value="{{ y.from }}">{{ y.year }}</option>
                        {% endfor %}
                    </select></div>
                    <div class="input-daterange input-group" id="datepicker">
                        <input type="text" class="input-sm form-control datetimepicker" name="sem_1_from" />
                        <span class="input-group-addon">to</span>
                        <input type="text" class="input-sm form-control" name="sem_1_to" />
                    </div>
                                        <div class="input-daterange input-group" id="datepicker">
                        <input type="text" class="input-sm form-control datetimepicker" name="sem_2_from" />
                        <span class="input-group-addon">to</span>
                        <input type="text" class="input-sm form-control" name="sem_2_to" />
                    </div>
                    <input type="submit" name="save" value="Zapisz" class="btn btn-default" />
                

            </form>
        </div>
    </div>
</div>
                    
                    <script type="text/javascript">




	$( "#datepicker .input-sm" ).datepicker({
		inline: true,
		dateFormat: "yy-mm-dd"
	});

    </script>

{% endblock %}
