{% extends './base.html.twig' %}

{% block title %}eDziennik AMN - nauczyciele{% endblock %}

{% block content %}
    {% if info != 'brak' %}
        {% if info.col == 'red' %}               
            <div class="alert alert-danger" role="alert">
            {% else %}
                <div class="alert alert-success" role="alert">
                {% endif %}

                {{ info.inf }}
            </div>
        {% endif %}
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Szkoła
                    <small>Control panel</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="{{ url('Home/index') }}"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li><a href="{{ url('School/index') }}"><i class="fa"></i>Szkoła</a></li>
                    <li><a href="{{ url('School/teachers') }}"><i class="fa"></i>Nauczyciele</a></li>
                    <li class="active">Dodaj nowego</li>
                </ol>
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="box box-primary">
                    <div class="box-header">
                        <i class="ion ion-clipboard"></i>
                        <h3 class="box-title">Dodaj nauczyciela</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">

                        <form name="inputform" method="POST" action="{% if teacher == 'new' %}{{ url('School/teachers', {'action': 'add'}) }}{% else %}{{ url('School/teachers', {'action': 'updt', 'id': teacher.id }) }}{% endif %}">


                            <div class="form-group">
                                <label>Nazwa użytkownika:</label>
                                <input type="text" name="username" value="{{ teacher.username }}" class="form-control" style="width:300px;" />
                            </div>
                            <div class="form-group">
                                <label>Imię:</label>
                                <input type="text" name="givenName" value="{{ teacher.givenName }}" class="form-control" style="width:300px;" />
                            </div>
                            <div class="form-group">
                                <label>Nazwisko:</label>
                                <input type="text" name="familyName" value="{{ teacher.familyName }}" class="form-control" style="width:300px;" />
                            </div>
                            <div class="form-group">
                                <label>E-mail:</label>
                                <input type="email" name="email" value="{{ teacher.email }}" class="form-control" style="width:300px;" />
                            </div>

                            <div class="form-group">
                                <label>Hasło:</label>
                                <input type="password" name="password" class="form-control" style="width:300px;" placeholder="Puste dla standardowego hasła qwerty" />
                            </div>


                            <div class="box-footer clearfix no-border">
                                <input type="submit" name="save" value="Zapisz" class="btn btn-default pull-right" />
                                <input type="submit" name="saveAndAdd" value="Zapisz i nowy" class="btn btn-default pull-right" />

                            </div>

                        </form>
                    </div><!-- /.box-body -->

                </div><!-- /.box -->

            </section><!-- /.Left col -->

        </div><!-- /.row (main row) -->

    </section><!-- /.content -->
</div><!-- /.content-wrapper -->


{% endblock %}