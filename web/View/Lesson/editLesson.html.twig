{% extends './base.html.twig' %}

{% block title %}eDziennik AMN - lekcja{% endblock %}
{% block head %}
    <link href="{{ url('template') }}/css/datepicker3.css" rel="stylesheet" type="text/css" />
    <link href="{{ url('template') }}/css/bootstrap-colorpicker.min.css" rel="stylesheet" type="text/css" />
    <link href="{{ url('template') }}/css/icheck/line/green.css" rel="stylesheet" type="text/css" />
{% endblock %}
{% block content %}

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Zajęcia
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="nav-tabs-custom">
            <!-- Tabs within a box -->
            <ul class="nav nav-tabs pull-right">
                <li><a href="#ratings-chart" data-toggle="tab">Oceny</a></li>
                <li><a href="#attendance-chart" data-toggle="tab">Frekwencja</a></li>
                <li class="active"><a href="#lesson-chart" data-toggle="tab">Lekcja</a></li>
                <li class="pull-left header"><i class="fa fa-inbox"></i> Dziennik</li>
            </ul>
            <div class="tab-content">
                <!-- Morris chart - Sales -->
                <div class="chart tab-pane active" id="lesson-chart" style="position: relative; min-height: 300px;">

                    <form name="inputform" method="POST" action="{{ url('Lesson/editLesson', {'action': 'add'}) }}">

                        <div class="form-group">
                            <label for="recipient-name" class="control-label">Data:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" name="date" class="form-control pull-right" id="daterange" value="{{ lesson.date|date("Y-m-d") }}" {% if lesson.id %} disabled {% endif %} />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="recipient-name" class="control-label">Godzina:</label>
                            <select name="hour" class="form-control" {% if lesson.id %} disabled {% endif %}>
                                {% for h in hours %}
                                    <option value="{{ h.id }}" {% if lesson.hour.id == h.id %} selected {% endif %}>{{ h.id }}. {{ h.fromTime|date('H:i') }} - {{ h.toTime|date('H:i') }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="recipient-name" class="control-label">Nauczyciel:</label>
                            <select name="teacher" class="form-control" {% if lesson.id %} disabled {% endif %}>
                                {% for t in Me.getTeacherSidebarData.teachers %}
                                    <option value="{{ t.id }}" {% if t.id == Me.getModel.id %} selected {% endif %}>{{ t.familyName }} {{ t.givenName }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="recipient-name" class="control-label">Klasa:</label>
                            <select name="class" class="form-control" {% if lesson.id %} disabled {% endif %}>
                                {% for c in Me.getTeacherSidebarData.classes %}
                                    <option value="{{ c.id }}" {% if lesson.class.id == c.id %} selected {% endif %} >{{ c.name }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="recipient-name" class="control-label">Przedmiot:</label>
                            <select name="subject" class="form-control" {% if lesson.id %} disabled {% endif %}>
                                {% for s in Me.getTeacherSidebarData.subjects %}
                                    <option value="{{ s.id }}" {% if lesson.subject.id == s.id %} selected {% endif %}>{{ s.subject }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="recipient-name" class="control-label">Temat:</label>
                            <input type="text" name="topic" value="{{ lesson.topic }}" class="form-control" />
                        </div>

                        <div class="box-footer clearfix no-border">
                            <input type="submit" name="save" value="Zapisz" class="btn btn-default pull-right" />

                        </div>

                    </form>


                </div>



                <div class="chart tab-pane" id="attendance-chart" style="position: relative; min-height: 300px;">
                    <form name="inputform" method="POST" action="{{ url('Lesson/editLesson', {'id': lesson.id }) }}">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th rowspan="2" width="1%">#</th>
                                    <th rowspan="2" width="15%">Uczeń</th>
                                    <th colspan="8">Lekcja</th>
                                    <th rowspan="2" width="4%">Statystyki</th>
                                </tr>
                                <tr>
                                    {% for i in range(1, 8) %}
                                        <th width="10%">{{ i }}</th>
                                        {% endfor %}
                                </tr>
                            </thead>
                            <tbody>
                                {% set nr = 1 %}
                                {% for student in lesson.class.students %}
                                    <tr>
                                        <td>{{ nr }}</td>
                                        <td>{{ student.givenName }} {{ student.familyName }}</td>
                                        {% for l in range(1, 8) %}
                                            <td>
                                                {% if lesson.hour.id == l %}
                                                    <input type="radio" name="attendance{{ student.id }}" value="1" {% if attendance[student.id][l] == 1 %}checked{% endif %}>
                                                    <label>OB</label>
                                                    <input type="radio" name="attendance{{ student.id }}" value="2" {% if attendance[student.id][l] == 2 %}checked{% endif %}>
                                                    <label>NB</label>
                                                    <input type="radio" name="attendance{{ student.id }}" value="3" {% if attendance[student.id][l] == 3 %}checked{% endif %}>
                                                    <label>S</label>
                                                    <input type="radio" name="attendance{{ student.id }}" value="4" {% if attendance[student.id][l] == 4 %}checked{% endif %}>
                                                    <label>ZW</label>
                                                    <input type="radio" name="attendance{{ student.id }}" value="5" {% if attendance[student.id][l] == 5 %}checked{% endif %}>
                                                    <label>NU</label>
                                                {% else %}
                                                    {{ attendance[student.id][l] }}
                                                {% endif %}
                                            </td>

                                        {% endfor %}
                                        <td>..</td>
                                    </tr>


                                    {% set nr = nr + 1 %}
                                {% endfor %}
                            </tbody>
                        </table>
                        <input type="hidden" name="class" value="{{ lesson.class.id }}" />
                        <input type="hidden" name="date" value="{{ lesson.date|date('Y-m-d') }}" />

                        <div class="box-footer clearfix no-border">
                            <input type="submit" name="saveAttendance" value="Zapisz" class="btn btn-default pull-right" />
                        </div>
                    </form>
                </div>



                <div class="chart tab-pane" id="ratings-chart" style="position: relative; min-height: 300px;">
                    <form name="inputform" method="POST" action="{{ url('Lesson/editLesson', {'id': lesson.id }) }}">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th width="1%">#</th>
                                    <th width="18%">Uczeń</th>
                                        {% for i in range(1, 20) %}
                                        <th width="4%" class="text-center">
                                            <span data-placement="top" data-toggle="tooltip" title="{{ ratingd[i].description }}<br />waga:{{ ratingd[i].weight }}" class="tooltipRating">
                                                <a href="#" data-toggle="modal" data-target="#addRdesc" data-rdesc="{{ i }}|{{ ratingd[i].description }}|{{ ratingd[i].shortDesc }}|{{ ratingd[i].weight }}|{{ ratingd[i].color }}">{% if ratingd[i].id %}{{ ratingd[i].shortDesc }}{% else %}+{% endif %}</a>
                                            </span>
                                        </th>
                                    {% endfor %}
                                    <th width="1%">
                                        Śr.
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set nr = 1 %}
                                {% for student in lesson.class.students %}
                                    <tr>
                                        <td width="1%">{{ nr }}</td>
                                        <td>{{ student.givenName }} {{ student.familyName }}</td>
                                        {% for i in range(1, 20) %}
                                            <td class="text-center">
                                                <span data-placement="top" data-toggle="tooltip" title="Data: {{ ratings[student.id][i].date|date("Y-m-d") }}" class="tooltipRating" style="color: {{ ratingd[i].color }}"><input type="text" name="rat{{ student.id }}-{{ i }}" value="{{ ratings[student.id][i].value }}" style="width: 30px" {% if not ratingd[i].id %}disabled{% endif %}/></span>
                                            </td>
                                        {% endfor %}
                                        <td>
                                            {{ ratingsAv[student.id] }}
                                        </td>
                                    </tr>
                                    {% set nr = nr + 1 %}
                                {% endfor %}

                            </tbody>

                        </table>
                        <div class="box-footer clearfix no-border">
                            <input type="submit" name="saveRatings" value="Zapisz" class="btn btn-default pull-right" />
                        </div>
                    </form>
                </div>
            </div>
        </div><!-- /.nav-tabs-custom -->

    </section>



    <div class="modal fade" id="addRdesc" tabindex="-1" role="dialog" aria-labelledby="addRdescLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="addRdescLabel">Opis oceny</h4>
                </div>
                <div class="modal-body">
                    <form name="inputform" method="POST" action="{{ url('Lesson/editLesson', {'action': 'add'}) }}">

                        <div class="form-group">
                            <label class="control-label">Pełny opis:<span class="text-red">*</span></label>
                            <input type="text" name="desc" class="form-control" id="rating-desc-input" />
                        </div>

                        <div class="form-group">
                            <label class="control-label">Skrócony opis (do 3 znaków):<span class="text-red">*</span></label>
                            <input type="text" name="shortDesc" class="form-control" id="rating-shortdesc-input" maxlength="3" />
                        </div>

                        <div class="form-group">
                            <label class="control-label">Waga oceny:</label>
                            <input type="text" name="weight" value="1" class="form-control" id="rating-weight-input" />
                        </div>

                        <div class="form-group">
                            <label class="control-label">Kolor:</label>
                            <div class="input-group my-colorpicker2 colorpicker-element">
                                <input type="text" class="form-control" name="color" id="rating-color-input">
                                <div class="input-group-addon">
                                    <i style="background-color: rgb(182, 71, 71);"></i>
                                </div>
                            </div>
                        </div>

                        <input type="hidden" id="rating-order-input" name="orderDesc" />
                        <input type="hidden" value="{{ lesson.class.id }}" name="class" />
                        <input type="hidden" value="{{ lesson.subject.id }}" name="subject" />
                        <input type="hidden" value="{{ lesson.id }}" name="lesson" />

                        <div class="box-footer clearfix no-border">
                            <input type="submit" name="saveRatingDesc" value="Zapisz" class="btn btn-default pull-right" />

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <script src="{{ url('template') }}/js/bootstrap-datepicker.js" type="text/javascript"></script>
    <script src="{{ url('template') }}/js/bootstrap-colorpicker.min.js" type="text/javascript"></script>
    <script src="{{ url('template') }}/js/icheck.min.js" type="text/javascript"></script>

    <script type="text/javascript" >
        $("#lessons-category-sidebar").addClass("treeview active");

        $('#addRdesc').on('show.bs.modal', function (event) {
            var lbutton = $(event.relatedTarget); // Button that triggered the modal
            var lrecipient = lbutton.data('rdesc'); // Extract info from data-* attributes
            var lmodal = $(this);
            var lres = lrecipient.split('|');
            lmodal.find('#rating-order-input').val(lres[0]);
            lmodal.find('#rating-desc-input').val(lres[1]);
            lmodal.find('#rating-shortdesc-input').val(lres[2]);
            lmodal.find('#rating-weight-input').val(lres[3]);
            lmodal.find('#rating-color-input').val(lres[4]);
        });


        // walidacja
        $("input[name$='saveRatingDesc']").on('click', function (e) {
            var rd = document.getElementById('rating-desc-input');
            var rsd = document.getElementById('rating-shortdesc-input');
            if (rd.value == '') {
                e.preventDefault;
                rd.setCustomValidity('Wymagany opis oceny!');
            } else {
                rd.setCustomValidity('');
            }
            if (rsd.value == '') {
                e.preventDefault;
                rsd.setCustomValidity('Wymagany skrócony opis!');
            } else {
                rsd.setCustomValidity('');
            }
        });

        //Datepicker
        $('#daterange').datepicker({
            format: 'yyyy-mm-dd'
        });
        //Colorpicker
        $(".my-colorpicker1").colorpicker();
        //color picker with addon
        $(".my-colorpicker2").colorpicker();

        $('.tooltipRating').tooltip({html: true})

        $(document).ready(function () {
            $(':radio').each(function () {
                var self = $(this),
                        label = self.next(),
                        label_text = label.text();

                label.remove();
                self.iCheck({
                    checkboxClass: 'icheckbox_line-green',
                    radioClass: 'iradio_line-green',
                    insert: '<div class="icheck_line-icon"></div>' + label_text
                });
            });
        });

    </script>


{% endblock %}