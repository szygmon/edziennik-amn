{% extends './base.html.twig' %}

{% block title %}eDziennik AMN - semestry{% endblock %}
{% block head %}

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker3.min.css" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.min.js"></script>

{% endblock %}
{% block content %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Szkoła
                <small>Control panel</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="{{ url('Home/index') }}"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="{{ url('School/index') }}"><i class="fa"></i>Szkoła</a></li>
                <li><a href="{{ url('School/semesters') }}"><i class="fa"></i>Semestry</a></li>
                <li class="active">Edytuj semestr</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="box box-primary">
                <div class="box-header">
                    <i class="ion ion-clipboard"></i>
                    <h3 class="box-title">Edytuj semestr</h3>
                </div><!-- /.box-header -->
                <div class="box-body">

                    <form name="inputform" method="POST" action="{{ url('School/semesters', {'action': 'updt', 'id': sem.id}) }}">
                        
                        <h4 class="box-title">Rok szkolny: {{ year }}</h4>
                        

                        <div class="row">
                            <div class="col-md-6">
                                <h4 class="box-title">Semestr {{ sem.semester }}</h4>
                                <div class="form-group">
                                    <label class="col-xs-3 control-label">Początek</label>
                                    <div class="col-xs-5 dateContainer">
                                        <div class="input-group input-append date DatePicker">
                                            <input type="text" class="form-control" name="sem1From" value="{{ sem.fromDate|date("Y-m-d") }}" />
                                            <span class="input-group-addon add-on"><i class="fa fa-calendar"></i></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="form-group">
                                    <label class="col-xs-3 control-label">Koniec</label>
                                    <div class="col-xs-5 dateContainer">
                                        <div class="input-group input-append date DatePicker">
                                            <input type="text" class="form-control" name="sem1To" value="{{ sem.toDate|date("Y-m-d") }}" />
                                            <span class="input-group-addon add-on"><i class="fa fa-calendar"></i></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="box-footer clearfix no-border">
                            <input type="submit" name="save" value="Zapisz" class="btn btn-default pull-right" />
                        </div>

                    </form>
                </div><!-- /.box-body -->




            </div><!-- /.box -->


        </section><!-- /.Left col -->

    </div><!-- /.row (main row) -->

</section><!-- /.content -->
</div><!-- /.content-wrapper -->

<script type="text/javascript">
