{% extends './base.html.twig' %}

{% block title %}eDziennik AMN - godziny zajęć{% endblock %}
{% block head %}
    <link type="text/css" href="{{ url('template') }}/css/bootstrap-timepicker.min.css" />
    <script type="text/javascript" src="{{ url('template') }}/js/bootstrap-timepicker.min.js"></script>
{% endblock %}
{% block content %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Szkoła
                <small>Control panel</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="{{ url('Home/index') }}"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="{{ url('School/index') }}"><i class="fa"></i>Szkoła</a></li>
                <li><a href="{{ url('School/hours') }}"><i class="fa"></i>Godziny zajęć</a></li>
                <li class="active">Edycja</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="box box-primary">
                <div class="box-header">
                    <i class="ion ion-clipboard"></i>
                    <h3 class="box-title">Edytuj godziny zajęć</h3>
                </div><!-- /.box-header -->
                <div class="box-body">

                    <form name="inputform" method="POST" action="{{ url('School/hours', {'action': 'updt', 'id': hour.id}) }}">

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="col-xs-3 control-label">Od</label>

                                    <div class="input-append bootstrap-timepicker">
                                        <input type="text" class="timepicker" name="fromTime" value="{{ hour.fromTime|date('H:i') }}" />
                                        
                                    </div>

                                    
       
                                    
                                    

                                </div>
                                <div class="clearfix"></div>
                                <div class="form-group">
                                    <label class="col-xs-3 control-label">Do</label>

                                    <div class="input-append bootstrap-timepicker">
                                        <input type="text" class="timepicker" name="toTime" value="{{ hour.toTime|date('H:i') }}" />
                                        <span class="add-on"><i class="icon-time"></i></span>
                                    </div>

                                </div>
                            </div>
                        </div>


                        <div class="box-footer clearfix no-border">
                            <input type="submit" name="save" value="Zapisz" class="btn btn-default pull-right" />
                        </div>
                    </form>
                </div><!-- /.box-body -->




            </div><!-- /.box -->


        </section><!-- /.Left col -->

    </div><!-- /.row (main row) -->

</section><!-- /.content -->
</div><!-- /.content-wrapper -->

