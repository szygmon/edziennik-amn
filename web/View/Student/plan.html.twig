{% extends './base.html.twig' %}

{% block title %}eDziennik AMN - plan lekcji{% endblock %}

{% block head %}
    <link href="{{ url('template') }}/css/daterangepicker-bs3.css" rel="stylesheet" type="text/css" />
{% endblock %}


{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Plan lekcji</h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row"><div class="col-md-2 col-sm-4 col-xs-12"></div><div class="col-md-2 col-sm-4 col-xs-12">aa</div></div>
        <!-- TO DO List -->
        <div class="box box-primary">
            <div class="box-header">
                <i class="ion ion-clipboard"></i>
                <h3 class="box-title">Plan lekcji</h3>
            </div><!-- /.box-header -->

            <div class="box-body">

                <h4>Klasa {{ class.name }}</h4>

                {% for i in range(1, 8) %}
                    <div class="row">
                        {% for d in range(1, 5) %}

                            <div class="col-md-2 col-sm-4 col-xs-12">
                                <div class="info-box bg-green">
                                    <span class="info-box-icon">{{ i }}</span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">{{ plan[i][d].subject.subject }}</span>
                                        <span class="info-box-text">{% if plan[i][d].classroom %} s. {{ plan[i][d].classroom.name }}{% endif %}</span>
                                        <div class="progress">
                                            <div class="progress-bar" style="width: 70%"></div>
                                        </div>
                                        <span class="progress-description">
                                            {{ plan[i][d].teacher.givenName }} {{ plan[i][d].teacher.familyName }}
                                        </span>
                                    </div>
                                </div>
                            </div>



                        {% endfor %}
                    </div>
                {% endfor %}
            </div><!-- /.box-body -->
        </div>
    </section>

{% endblock %}
